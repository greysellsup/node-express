<h1>Card</h1>

<div id="card">
    {{#if games.length}}
        <table>
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Count</td>
                    <td>Price</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                {{#each games}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{count}}</td>
                        <td><span data-price>{{price}}</span></td>
                        <td>
                            <button class="btn btn-small" data-btn-remove={{id}}>delete</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <p class="price"><strong>Price: </strong><span data-price>{{price}}</span></p>
    {{else}}
        <p>basket is empty</p>
    {{/if}}
</div>