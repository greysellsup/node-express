<h1>Add games</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Name</label>
        <span class="helper-text" data-error="Add name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Add price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Image path</label>
        <span class="helper-text" data-error="Add image path"></span>
    </div>

    <button class="btn btn-primary">Add game</button>
</form>