<h1>Games</h1>
<div>
    {{#if games.length}}
        {{#each games}}
            <div class="row">
                <div class="col s6 offset-s3">
                    <div class="card">
                    <div class="card-image">
                        <img src="{{img}}" alt="{{title}}">
                        
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action">
                        <a href="#" id="{{id}}">Open game</a>
                    </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        No games yet
    {{/if}}
    </div>


